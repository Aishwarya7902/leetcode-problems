class Solution {
public:
    int numSquares(int n) {
       int a=sqrt(n);
        if(a*a ==n)return 1;
        if(n<=3)return n;
        int mn=INT_MAX;
        for(int i=1;i*i<=n;i++){
            mn=min(mn, 1+numSquares(n-i*i));
        }
        return mn;
    }
};

******************************************2.MEMOIZATION ðŸ˜¶getting tle************************
class Solution {
public:
    int numSquares(int n) {
       int a=sqrt(n);
        if(a*a ==n)return 1;
        if(n<=3)return n;
        vector<int>dp(n+1,-1);
        if(dp[n]!=-1)return dp[n];
        int mn=INT_MAX;
        for(int i=1;i*i<=n;i++){
            mn=min(mn, 1+numSquares(n-i*i));
        }
        return dp[n]=mn;
    }
};

********************************** 3.BOTTOM UP(acceptedðŸ˜Ž)********************
time:O(n*n^1/2)
class Solution {
public:
    int numSquares(int n) {
        vector<int>dp(n+1);
        dp[0]=0;
        
      
        for(int i=1;i<=n;++i){
             dp[i]=i;
           for(int j=1;j*j<=i;++j){
               dp[i]=min(dp[i],1+dp[i-j*j]);
           }
       }
        return dp[n];
    }
};

********************  MOST OPTIMISED SOLUTION ............USING LAGRANGE'S 3 SQUARE METHOD ðŸ¤©ðŸ¤©ðŸ¤©ðŸ¤©ðŸ¤©ðŸ¤©ðŸ¤©ACCEPTED********************
TIME:O(N^1/2)
class Solution {
public:
    int numSquares(int n) {
        if(ceil(sqrt(n))==floor(sqrt(n)))
            return 1;
    while(n%4==0)
        n/=4;
        if(n%8==7)
            return 4;
        for(int i=1;i*i<=n;i++){
            int base=sqrt(n-i*i);
            if(base*base==(n-i*i))
                return 2;
        }
        return 3;
    }
};

