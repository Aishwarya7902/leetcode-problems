problem:https://leetcode.com/problems/best-time-to-buy-and-sell-stock/
BRUTE FORCE:
TIME:O(N2)
SPACE:O(1)

class Solution {
public:
    int maxProfit(vector<int>& price) {
       
       
        int maxprofit=0;
        for(int i=0;i<price.size()-1;i++){
            for(int j=i+1;j<price.size();j++){
                if((price[j]-price[i])>maxprofit){
                   maxprofit=price[j]-price[i]; 
                }
            }
        }
        return maxprofit;
    }
};

//////////////////////SELF OPTIMISED
TIME:O(N)
SPACE:O(1)
class Solution {
public:
    int maxProfit(vector<int>& arr) {
       
       
        int profit=0;
        int lowest=arr[0];
        for(int i=0;i<arr.size();i++){
            if((arr[i]-lowest)>profit){
                profit=arr[i]-lowest;
            }
            else{
                if(arr[i]<lowest)
                    lowest=arr[i];
            }
        }
        return profit;
    }
};

//////////////////// MOST OPTIMISED(ðŸ˜ŽCREDIT ANUJ BHAIYA)
time optimised

time:O(n)
space:O(n)
class Solution {
public:
    int maxProfit(vector<int>& arr) {
       
       vector<int>v(arr.size());
        int profit=INT_MIN;
        int currmax=INT_MIN;
        for(int i=arr.size()-1;i>=0;i--){
            currmax=max(currmax,arr[i]);
            v[i]=currmax;
        }
        for(int i=0;i<arr.size();i++){
            profit=max(profit,v[i]-arr[i]);
        }
        return profit;
    }
};

//////////////////MOST OPTIMISED (time and space optimised)



